.content {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.content .title {
  font-family: PingFangSC-Semibold;
  font-size: 25px;
  color: #FFFFFF;
  margin-bottom: 30px
}
.content .detail {
  width: 81.3%;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: rgba(255,255,255,0.65);
  text-align: justify;
  line-height: 23px;
}
.content .btn {
  margin-top: 30px;
  color: #FFFFFF;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .tip {
  margin-top: 30px;
  opacity: 0.82;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: rgba(255,255,255,0.40);
}
background {
  height: 100%;
